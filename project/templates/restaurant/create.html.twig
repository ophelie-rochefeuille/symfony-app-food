{% extends 'base.html.twig' %}


{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

 <ul class="nav justify-content-end">
        <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="#">Mon profil</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('restaurants') }}">Mes restaurants</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('app_logout') }}">Me deconnecter</a>
        </li>
        </ul>
        
    <h1>Création d'un restaurant</h1>

    <form method="POST">
    <div>
    <label for="name">Nom du restaurant</label>
    <input type="text" id="name" name="name">
    </div>

    <div>
    <label for="adress">Addresse du restaurant</label>
    <input type="text" id="adress" name="adress">
    </div>

    <div>
    <label for="phone">Numéro de téléphone du restaurant</label>
    <input type="text" id="phone" name="phone">
    </div>

    <div>
    <input type="submit" value="Créer le restaurant">
    </div>

    <label for="avatar">Choose a profile picture:</label>

    <div>
    <input type="file"
       id="image" name="image"
       accept="image/png, image/jpeg">
    </div>
    </form>
</div>
{% endblock %}
